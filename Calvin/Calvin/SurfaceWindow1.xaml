</s:SurfaceWindow>
<DataTemplate x:Key="ContainerItemTemplate">
    <Border BorderThickness="1" BorderBrush="White" Margin="3">
        <TextBlock Width="120" Text="{Binding XPath=@Name}" Padding="3" Background="AliceBlue"/>
    </Border>
</DataTemplate>